{
  "env": {
    "es2022": true,
    "node": true
  },
  "plugins": ["zod"],
  "rules": {
    "zod/prefer-enum": "error",
    "zod/require-strict": "error"
  },
  "parserOptions": {
    "project": "shared/tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "shared/tsconfig.json"
      }
    }
  }
}
