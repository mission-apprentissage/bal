  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Server",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/$KNOWN_TOOLS$/**"
      ],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app"
    },
    {
      "name": "Attach Processor",
      "port": 9230,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/$KNOWN_TOOLS$/**"
      ],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app"
    },
    {
      "name": "Attach Test",
      "port": 9231,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/$KNOWN_TOOLS$/**"
      ],
      "type": "node",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "smartStep": true,
      "autoAttachChildProcesses": false,
      "timeout": 60000,
    },
  ]
}
