{
  "include": ["./**/*.ts"],
  "exclude": ["**/node_modules", "coverage", "dist"],
  "files": ["src/types.d.ts"],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Projects */
    "incremental": true,
    /* Language and Environment */
    "target": "ES2021",
    "lib": ["ESNext"],
    /* Modules */
    "module": "ESNext", // TODO: maybe nodenext ?
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "resolveJsonModule": true,
    /* JavaScript Support */
    "allowJs": false,
    /* Emit */
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Output Formatting */
    "pretty": true
  }
}
